<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linwoain.storytelling">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

  <application
      android:allowBackup="true"
      android:icon="@drawable/listen"
      android:label="@string/app_name"
      android:name=".config.App"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:label="@string/app_name"
        android:name=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".MuluActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>

    <service
        android:exported="false"
        android:name=".service.DaemonService">
    </service>
    <service
        android:exported="false"
        android:name=".service.CancelService">
    </service>
    <service
        android:exported="false"
        android:name=".service.Mp3PlayerService">
    </service>

    <meta-data
        android:name="UMENG_APPKEY"
        android:value="576a427067e58e60110016eb"/>
    <meta-data
        android:name="UMENG_CHANNEL"
        android:value="${CHANNEL_VALUE}"/>
    <meta-data
        android:name="BMOB_CHANNEL"
        android:value="${CHANNEL_VALUE}"/>

    <activity
        android:name="cn.bmob.v3.update.UpdateDialogActivity"
        android:theme="@android:style/Theme.Translucent.NoTitleBar">
    </activity>
    <activity
        android:label="@string/about"
        android:name=".AboutActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>