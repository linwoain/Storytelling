<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.linwoain.storytelling.AboutActivity"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/large_text"
            android:autoLink="all"
            android:id="@+id/textView"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="16dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author"
            tools:layout_editor_absoluteY="143dp"
            tools:layout_editor_absoluteX="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linwoain"
            android:textColor="@color/blue"
            android:id="@+id/linearLayout"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
            android:layout_marginLeft="93dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q_q"
            android:id="@+id/linearLayout2"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qq_no"
            android:textColor="@color/blue"
            tools:layout_conversion_absoluteX="52dp"
            tools:layout_conversion_absoluteY="161dp"
            tools:layout_conversion_absoluteWidth="80dp"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_editor_absoluteY="164dp"
            tools:layout_editor_absoluteX="237dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            tools:layout_conversion_absoluteX="16dp"
            tools:layout_conversion_absoluteY="180dp"
            tools:layout_conversion_absoluteWidth="48dp"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_editor_absoluteY="160dp"
            tools:layout_editor_absoluteX="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_content"
            android:textColor="@color/blue"
            tools:layout_conversion_absoluteX="64dp"
            tools:layout_conversion_absoluteY="180dp"
            tools:layout_conversion_absoluteWidth="108dp"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_editor_absoluteY="132dp"
            tools:layout_editor_absoluteX="140dp" />


    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>
